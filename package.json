{
    "name": "vscode-archive",
    "displayName": "Vscode Archive",
    "description": "compress/decompress .zip/.vsix/.crx/.asar/.tgz/.gzip/.tar",
    "version": "0.1.6",
    "publisher": "YuTengjing",
    "icon": "./assets/logo.png",
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "compress",
        "decompress",
        "zip",
        "unzip",
        "crx",
        "vsix",
        "asar",
        "tgz",
        "gzip",
        "tar"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/vscode-archive"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-archive.decompress",
                "title": "Decompress Here"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "vscode-archive.decompress",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "vscode-archive.decompress",
                    "when": "!explorerResourceIsFolder && resourceFilename =~ /.+\\.(zip|vsix|crx|asar|tgz|gzip|tar)$/i",
                    "group": "navigation@0"
                }
            ]
        }
    },
    "eslintConfig": {
        "extends": "@yutengjing/eslint-config-typescript",
        "rules": {
            "security/detect-non-literal-fs-filename": 0
        }
    },
    "prettier": "@yutengjing/prettier-config",
    "scripts": {
        "vscode:prepublish": "pnpm esbuild:base --minify",
        "preinstall": "npx only-allow pnpm",
        "postinstall": "stale-dep -u",
        "clean": "rimraf -rf ./out",
        "esbuild:base": "stale-dep && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --external:original-fs --format=cjs --platform=node --target=ESNext",
        "esbuild:watch": "pnpm esbuild:base --sourcemap --watch",
        "esbuild:analyze": "pnpm esbuild:base --minify --metafile=meta.json && esbuild-visualizer --metadata ./meta.json --open",
        "lint": "eslint src --ext ts",
        "package": "vsce package --no-dependencies",
        "release": "bumpp -c \"release: v%s\" package.json",
        "publish:vs-marketplace": "vsce publish --no-dependencies",
        "publish:open-vsx": "ovsx publish --no-dependencies"
    },
    "dependencies": {
        "asar": "^3.2.0",
        "compressing": "^1.9.0",
        "jszip": "^3.10.1"
    },
    "devDependencies": {
        "@types/node": "^18.15.11",
        "@types/unzipper": "^0.10.5",
        "@types/vscode": "^1.77.0",
        "@vscode/vsce": "^2.19.0",
        "@yutengjing/eslint-config-typescript": "^0.2.8",
        "@yutengjing/prettier-config": "^0.0.1",
        "bumpp": "^9.1.0",
        "esbuild": "^0.17.17",
        "eslint": "^8.38.0",
        "ovsx": "^0.8.0",
        "prettier": "^2.8.7",
        "stale-dep": "^0.6.0",
        "typescript": "^5.0.4"
    }
}
